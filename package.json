{
    "name": "tonContracts",
    "version": "0.0.1",
    "scripts": {
        "start": "blueprint run",
        "build": "blueprint build",
        "test": "jest --verbose",
        "lab": "blueprint build CreateGameContact && yarn test -t plays",
        "build-game:create": "npx blueprint build CreateGameContact",
        "deploy-game:create": "npx blueprint run deployCreateGameContact --mainnet --tonconnect",
        "build-game": "npx blueprint build CfGameContract",
        "deploy-game": "npx blueprint run deployCfGameContract --testnet --tonconnect",
        "deploy:create": "npm run build-game:create && npm run deploy-game:create",
        "deploy": "npm run build-game && npm run deploy-game"
    },
    "devDependencies": {
        "@ton/blueprint": "^0.21.0",
        "@ton/sandbox": "^0.19.0",
        "@ton/test-utils": "^0.4.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.12",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "@ton/ton": "^13.11.1",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "ts-jest": "^29.1.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    }
}
